
<div class="col-sm-6 col-md-4 col-lg-3" id="products">
  <%= image_tag(product.image_url, class: "img-responsive image") unless product.image_url.blank? %> <!-- unless product.image_url.blank? important when there is no picture, without page wouldn't load -->
  <h3><strong><%= product.name %></strong></h3>
  <p>Description: <%= product.description %></p>
  <p>Colour: <%= product.colour %></p>
  <strong>Price: <%= product.price %> â‚¬</strong>
  <hr>
  <div id="actions">
    <%= link_to 'Show', product, class: "btn btn-default" %>
    <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>
</div>
